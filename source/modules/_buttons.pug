//-------------------------------------------------------
//- Modules :: Buttons
//-------------------------------------------------------

mixin buttons({ text, type, size, isFull, iconFont, iconImage, modal, modalId, fwBase, disabled })
  button.button(
    class= type ? `button--${type}` : null
    class= size ? `button--${size}` : null
    class= fwBase ? `button--${fwBase}` : null
    class= (isFull === true) ? 'button--full' : null
    data-toggle= modal,
    data-target= modalId,
    disabled= disabled
  )&attributes(attributes)
    if (iconFont !== '' && iconFont !== undefined)
      +icon-fonts(iconFont)(class='button__icon')
    if (iconImage !== '' && iconImage !== undefined)
      +icon-images(iconImage)(class='button__icon')
    span.button__text
      | #{text}

mixin buttons-link({ href, text, type, size, isFull, iconFont, iconImage, imageUrl })
  a.button-link(
    class= type ? `button-link--${type}` : null
    class= size ? `button-link--${size}` : null
    class= (isFull === true) ? 'button-link--full' : null
    href= href ? href : '#'
    role='button'
  )&attributes(attributes)
    if (iconFont !== '' && iconFont !== undefined)
      +icon-fonts(iconFont)(class='button__icon')
    if (iconImage !== '' && iconImage !== undefined)
      +icon-images(iconImage)(class='button__icon')
    if (imageUrl !== '' && imageUrl !== undefined)
      img.button-link__image(src=imageUrl)
    span.button__text
      | #{text}
