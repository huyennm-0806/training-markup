//- Input text :: Type
h2 Input text types
-
  var inputTextTypes = [
    { 
      label: 'Mail address',
      id: 'email',
      type: 'email' 
    },
    { 
      label: 'Password',
      id: 'password',
      type: 'password'
    }
  ];
.row
  each val in inputTextTypes
    .col-3
      .code-example
        .demo
          +input-text({
            label: val.label,
            id: val.id,
            type: val.type
          })
        pre
          code
            | +input-text({
            |   label: '#{val.label}',
            |   id: '#{val.id}',
            |   type: '#{val.type}'
            | })
